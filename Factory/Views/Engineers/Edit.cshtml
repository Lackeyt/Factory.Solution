@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;

<h1 class="jumbotron">
  Edit Engineer:
  <p>@Html.ActionLink("Engineer List", "Index") || @Html.ActionLink("Machine List", "Index", "Machines") || @Html.ActionLink("Home", "Index", "Home")</p>
</h1>

<div class="container">
  @using (Html.BeginForm())
  {
    <div class="form-group">
      <h4>Name</h4>
      @Html.EditorFor(model=>model.Name, new{@class="form-control", @required=true})
    </div>
    <input type="submit" value="Edit Engineer" class="btn btn-secondary">
    <input type="button" value="Cancel" onclick="location.href='@Url.Action("Index", "Engineers")';" class="btn btn-secondary"/>
  }
</div>