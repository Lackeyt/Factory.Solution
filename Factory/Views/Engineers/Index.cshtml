@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>
  Engineers
  <p>@Html.ActionLink("Machine List", "Index", "Machines") || @Html.ActionLink("Home", "Index", "Home")</p>
</h1>

<div class="container">
  @if (@Model.Count == 0)
  {
    <h3>No Engineers have been added yet!</h3>
  } 

  @foreach (Engineer engineer in Model)
  {
    <li>
      @Html.ActionLink($"{engineer.Name}", "Details", new {id = engineer.EngineerId}) || <input type="button" value="Delete" onclick="location.href='@Url.Action("Delete", "Engineers", new {id= engineer.EngineerId})';" class="btn btn-secondary"/>
    </li>
  }
  <br>
  <input type="button" value="New Engineer" onclick="location.href='@Url.Action("Create", "Engineers")';" class="btn btn-secondary"/>
</div>
