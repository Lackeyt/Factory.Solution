@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1 class="jumbotron">
  Machines
  <p>@Html.ActionLink("Engineer List", "Index", "Engineers") || @Html.ActionLink("Home", "Index", "Home")</p>
</h1>

<div class="container">
  @if (@Model.Count == 0)
  {
    <h3>No Machines have been added yet!</h3>
  } 

  @foreach (Machine machine in Model)
  {
    <li>
      @Html.ActionLink($"{machine.Name}", "Details", new {id = machine.MachineId}) || <input type="button" value="Delete" onclick="location.href='@Url.Action("Delete", "Machines", new {id= machine.MachineId})';" class="btn btn-secondary"/>
    </li>
    <br>
  }
  <br>
  <input type="button" value="New Machine" onclick="location.href='@Url.Action("Create", "Machines")';" class="btn btn-secondary"/>
</div>