@{
  Layout = "_Layout";
}

@model Factory.Models.Machine;

<h1 class="jumbotron">
  Add Machine
  <p>@Html.ActionLink("Machine List", "Index") || @Html.ActionLink("Engineer List", "Index", "Engineers") || @Html.ActionLink("Home", "Index", "Home")</p>
</h1>

<div class="container">
  @using (Html.BeginForm())
  {
    <div class="form-group">
      <h4>Name</h4>
      @Html.TextBoxFor(model=>model.Name, new{@class="form-control"})
    </div>
    <input type="submit" value="Add Machine" class="btn btn-secondary">
    <input type="button" value="Cancel" onclick="location.href='@Url.Action("Index", "Machines")';" class="btn btn-secondary"/>
  }
</div>